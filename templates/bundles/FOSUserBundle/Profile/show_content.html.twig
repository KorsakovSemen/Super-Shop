{% trans_default_domain 'FOSUserBundle' %}

<h4>Profile</h4>
<div class="fos_user_user_show">
    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <p>{{ 'Баланс' }}: {{ balance }} р.</p>
    <a href="{{ path('replanish',{id: user.id }) }}" class="btn btn-success">Пополнить</a>
    <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary">Изменить пароль</a>
    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-secondary">Изменить данные</a>
    <a href="{{ path('user-check') }}" class="btn btn-primary">Покупки</a>
</div>
