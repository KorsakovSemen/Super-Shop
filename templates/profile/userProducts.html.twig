{% extends 'base.html.twig' %}

{% block sidebar %}
{% endblock %}

{% block content %}

    <div class="container" style="margin-top: 15px">
        {% for cart in carts %}
            <div class="table-responsive">
                <table class="table table-striped table-secondary">
                    <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">Product</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for c in cart.rows %}
                        <tr class="table">
                            <td><a class="center"><img class="card-img-top"
                                                       src="{{ vich_uploader_asset(c.product, 'imageFile') }}" alt="No"
                                                       style="height: 100px; width: 100px;"></a></td>
                            <td> {{ c.product }}</td>
                            <td> {{ c.count }}</td>
                            {% if c.product.typeSale is null %}
                                <td>{{ c.product.cost * c.count }}</td>
                            {% else %}
                                <td>
                                    <s>{{ (c.product.cost)*c.count }}</s> {{ (c.product.cost - c.product.typeSale.money)*c.count }}
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endfor %}

    </div>

{% endblock %}
